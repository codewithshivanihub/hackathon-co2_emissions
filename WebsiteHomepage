      <div style='margin-top: 40px; padding: 20px; background-color: rgba(255,255,255,0.1); border-radius: 10px;'>
        <h3 style='color: white; font-family: Optima;'>Look up CO2 emissions for a specific year:</h3>
        <input type="number" id="yearInput" placeholder="Enter year (1751-2017)" min="1751" max="2017" 
               style='padding: 10px; margin: 10px; border-radius: 5px; border: none; width: 200px;'>
        <button onclick="getCO2Data()" 
                style='padding: 10px 20px; margin: 10px; background-color: white; border: none; border-radius: 5px; cursor: pointer;'>
          Get CO2 Data
        </button>
        <p id="result" style='color: white; font-family: Optima; font-size: 16px; margin-top: 20px;'></p>
      </div>

      <script>
        let usaData = [];

        // Load CSV data when page loads
        async function loadCO2Data() {
          try {
            const response = await fetch('co2_emission.csv');
            const csvText = await response.text();
            
            const lines = csvText.split('\n');
            const headers = lines[0].split(',');
            
            // Parse CSV and filter for USA data
            for (let i = 1; i < lines.length; i++) {
              const line = lines[i].trim();
              if (line) {
                const values = line.split(',');
                const code = values[1];
                const year = parseInt(values[2]);
                const emissions = parseFloat(values[3]);
                
                if (code === 'USA' && !isNaN(year) && !isNaN(emissions)) {
                  usaData.push({ year: year, emissions: emissions });
                }
              }
            }
            
            console.log(`Loaded ${usaData.length} USA CO2 records`);
          } catch (error) {
            console.error('Error loading CO2 data:', error);
          }
        }

        function getCO2Data() {
          const yearInput = document.getElementById('yearInput');
          const result = document.getElementById('result');
          const userAsk = parseInt(yearInput.value);
          
          if (userAsk < 1751 || userAsk > 2017) {
            result.textContent = 'Please choose a year between 1751 and 2017.';
            result.style.color = '#ffcccc';
            return;
          }
          
          // Find data for the requested year
          const yearData = usaData.find(data => data.year === userAsk);
          
          if (yearData) {
            result.textContent = `During ${userAsk}, there were about ${yearData.emissions.toLocaleString()} tons of CO2 emitted in the United States.`;
            result.style.color = 'white';
          } else {
            result.textContent = `Data not available for ${userAsk}. Please try another year.`;
            result.style.color = '#ffcccc';
          }
        }

        // Load data when page loads
        window.addEventListener('load', loadCO2Data);
        
        // Allow Enter key to trigger the search
        document.getElementById('yearInput').addEventListener('keypress', function(e) {
          if (e.key === 'Enter') {
            getCO2Data();
          }
        });
      </script>
  </main>
